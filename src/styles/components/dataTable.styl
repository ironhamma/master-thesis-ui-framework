.duckTableContainer{
    position relative
    width 100%
    box-shadow: 0px 0px 10px 10px rgba(0,0,0,0.2)
    border: 2px solid $primary_dark
    border-radius: 8px
    background-color: $primary_light
    overflow: hidden

    .duckTable{
        width 100%
        display: flex
        flex-direction: column
        overflow: auto

        /* width & height of scrollbars */
        &::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        /* Track */
        &::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        /* Handle */
        &::-webkit-scrollbar-thumb {
            background: $primary_dark;
        }

        /* Handle on hover */
        &::-webkit-scrollbar-thumb:hover {
        }

        .duckTableHead{
            display: flex
            flex-direction: column
            width: 100%

            .duckTableHeaderRow{
                display: flex
                width: 100%
                position: relative
            
                .duckTableHeaderCell{
                    display: flex
                    align-items: center
                    justify-content: flex-start
                    font-weight: 800
                    padding: 0 8px
                    border-bottom: 2px solid $primary_dark
                    border-right: 1px solid $primary_dark

                    min-width: 8rem // TODO: REMOVE
                    min-height: 70px // TODO: REMOVE
                }

                &Sticky{
                    position absolute
                    top: 0
                    left: 0
                    overflow: hidden
                    z-index: 1

                    .duckTableHeaderCell{
                        background-color: $primary_light    
                    }
                }
            }    
        }

        .duckTableBody{
            display: flex
            flex-direction: column
            width: 100%
            will-change: transform
            position: relative

            .duckTableRow{
                display: flex
                width: 100%

                .duckTableCell{
                    display: flex
                    align-items: center
                    justify-content: flex-start
                    padding: 0 8px
                    border-bottom: 1px solid $primary_dark
                    border-right: 1px solid $primary_dark
                    overflow: hidden
                }
            }
        }  
    }
}